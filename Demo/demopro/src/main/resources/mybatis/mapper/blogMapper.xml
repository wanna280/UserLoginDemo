<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demopro.dao.BlogDao">
    <resultMap id="Blog" type="com.example.demopro.bean.BlogBean">
        <result column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="content" property="content"/>
        <result column="publishTime" property="publishTime"/>
        <result column="blog_title" property="blog_title"/>
    </resultMap>

    <select id="GetAllBlogs" resultMap="Blog">
        select *
        from wann.blog
        where 1 = 1;
    </select>
    <select id="GetBlogById" resultMap="Blog">
        select *
        from wann.blog
        where id = #{id};
    </select>

    <select id="GetBlogsByUserName" resultMap="Blog">
        select *
        from wann.blog
        where username = #{username};
    </select>

    <insert id="AddBlog">
        insert into wann.blog(username, content, publishTime, blog_title)
        values (#{username}, #{content}, #{publishTime}, #{blog_title});
    </insert>

    <update id="UpdateBlog">
        update wann.blog
        set blog_title=#{blog_title},
            content = #{content},
            publishTime=#{publishTime}
        where id = #{id};
    </update>

</mapper>